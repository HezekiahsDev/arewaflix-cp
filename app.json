{
  "expo": {
    "name": "Arewaflix",
    "slug": "arewaflix",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon-arewa.png",
    "scheme": "arewaflixcp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-arewa.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.arewaflix.app",
      "buildNumber": "1.0.0",
      "icon": "./assets/images/icon-arewa.png",
      "splash": {
        "image": "./assets/images/splash-arewa.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": true,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSAllowsArbitraryLoadsInWebContent": false,
          "NSAllowsLocalNetworking": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "127.0.0.1": {
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "NSUserTrackingUsageDescription": "We use device analytics to prevent fraud and improve your video recommendations. Your data is never sold to third parties.",
        "NSPhotoLibraryUsageDescription": "Allow access to upload photos for your profile picture",
        "NSCameraUsageDescription": "Allow camera access to take photos for your profile picture",
        "NSMicrophoneUsageDescription": "Allow microphone access for recording audio in video uploads",
        "NSPhotoLibraryAddUsageDescription": "Allow access to save videos to your photo library"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-arewa.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.arewaflix.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon-arewa.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "65fa3bb5-6826-4ab8-a8d3-2ce05db3e26f"
      },
      "privacyPolicyUrl": "https://arewaflix.com/terms/privacy-policy"
    },
    "owner": "hezekiahsdev"
  }
}
